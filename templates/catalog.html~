{% block head %}
<script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
<script src="https://netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
<script type="text/javascript" charset="utf-8">
   $(document).on('click', '#sendcatalog',function(event){
     var message = $("#namebox").val();
     if(message != ""){
     $("#catalogform").submit();
}
});
   $(document).on('click', '#popnew',function(event){
     $("#newModalLabel").empty().append("New");
     $("#modalbodynew").empty().append('<form role ="form" action="{{url_for("new_catalog_page")}}" method="post" id="catalogform"><div class="form-group"> <label for="name">name</label> <input type="text" class="form-control" name="name" id="namebox"></input></div></form>');
});
$(document).on('click', '#popedit',function(event){
     $("#newModalLabel").empty().append("Edit");
     $("#modalbodynew").empty().append('<form action="{{url_for("catalog_edit_page", catalog_id=active_id)}}" method="post" id="catalogform"><div class="form-group"> <label for="name">name</label> <input type="text" class="form-control" name="name" id="namebox"></input></div></form>');
});
$(document).on('click', '#popdelete',function(event){
     $("#newModalLabel").empty().append("Delete");
     $("#modalbodynew").empty().append('<form role ="form" action="{{url_for("catalog_delete_page", catalog_id=active_id)}}" method="post" id="catalogform"><label for="name">Are you sure to delete this Catalog?</label></form>');
});
$(document).on('click', '#popnewitem',function(event){
     $("#newModalLabel").empty().append("New Item");
     $("#modalbodynew").empty().append('<form role ="form" action="{{url_for("item_new_page", catalog_id=active_id)}}" method="post" id="catalogform"><div class="form-group"> <label for="name">name</label> <input type="text" class="form-control" name="name" id="namebox"></input></div><div class="form-group"> <label for="name">picture</label> <input type="text" class="form-control" name="picture" ></input></div><div class="form-group"> <label for="name">description</label> <input type="text" class="form-control" name="description" ></input></div></form>');
});
    </script>
{% endblock %}

